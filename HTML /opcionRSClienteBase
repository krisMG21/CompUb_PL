<body>
    <h1>Reserva de Salas</h1>

    <div class="sala-container" id="sala1">
        <div class="sala">
            <h2>Sala 1</h2>
            <div class="hora disponible" data-hora="08:00-10:00" onclick="reservar('sala1', '08:00-10:00')">08:00 - 10:00</div>
            <div class="hora disponible" data-hora="10:00-12:00" onclick="reservar('sala1', '10:00-12:00')">10:00 - 12:00</div>
            <div class="hora disponible" data-hora="12:00-14:00" onclick="reservar('sala1', '12:00-14:00')">12:00 - 14:00</div>
            <div class="hora disponible" data-hora="14:00-16:00" onclick="reservar('sala1', '14:00-16:00')">14:00 - 16:00</div>
            <div class="hora disponible" data-hora="16:00-18:00" onclick="reservar('sala1', '16:00-18:00')">16:00 - 18:00</div>
            <div class="hora disponible" data-hora="18:00-20:00" onclick="reservar('sala1', '18:00-20:00')">18:00 - 20:00</div>
        </div>
    </div>

    <div class="sala-container" id="sala2">
        <div class="sala">
            <h2>Sala 2</h2>
            <div class="hora disponible" data-hora="08:00-10:00" onclick="reservar('sala2', '08:00-10:00')">08:00 - 10:00</div>
            <div class="hora disponible" data-hora="10:00-12:00" onclick="reservar('sala2', '10:00-12:00')">10:00 - 12:00</div>
            <div class="hora disponible" data-hora="12:00-14:00" onclick="reservar('sala2', '12:00-14:00')">12:00 - 14:00</div>
            <div class="hora disponible" data-hora="14:00-16:00" onclick="reservar('sala2', '14:00-16:00')">14:00 - 16:00</div>
            <div class="hora disponible" data-hora="16:00-18:00" onclick="reservar('sala2', '16:00-18:00')">16:00 - 18:00</div>
            <div class="hora disponible" data-hora="18:00-20:00" onclick="reservar('sala2', '18:00-20:00')">18:00 - 20:00</div>
        </div>
    </div>

    <button id="reservarBtn" disabled onclick="realizarReserva()">Reservar</button>

    <script>
        // Simulaci칩n de la base de datos con reservas
        const reservas = {
            "sala1": {
                "08:00-10:00": false,
                "10:00-12:00": false,
                "12:00-14:00": false,
                "14:00-16:00": false,
                "16:00-18:00": false,
                "18:00-20:00": false
            },
            "sala2": {
                "08:00-10:00": true,
                "10:00-12:00": false,
                "12:00-14:00": false,
                "14:00-16:00": false,
                "16:00-18:00": false,
                "18:00-20:00": false
            }
        };

        // Verificar disponibilidad y habilitar reserva
        function reservar(sala, hora) {
            if (reservas[sala][hora]) {
                alert('Esta franja horaria ya est치 ocupada.');
            } else {
                // Marcar la franja horaria como seleccionada
                document.querySelectorAll(`#${sala} .hora`).forEach(el => el.classList.remove('seleccionada'));
                document.querySelector(`#${sala} .hora[data-hora="${hora}"]`).classList.add('seleccionada');
                document.getElementById('reservarBtn').disabled = false;
                document.getElementById('reservarBtn').setAttribute('data-hora', hora);
                document.getElementById('reservarBtn').setAttribute('data-sala', sala);
            }
        }

        // Realizar la reserva
        function realizarReserva() {
            const sala = document.getElementById('reservarBtn').getAttribute('data-sala');
            const hora = document.getElementById('reservarBtn').getAttribute('data-hora');
            const nombreUsuario = prompt("Por favor, introduce tu nombre de usuario:");

            if (!nombreUsuario) {
                alert('El nombre de usuario es obligatorio.');
                return;
            }

            // Simulaci칩n de la inserci칩n en la base de datos
            reservas[sala][hora] = true; // Marcar la hora como reservada
            alert("La Reserva se ha realizado correctamente.");
            
            // Actualizar la interfaz
            const horaEl = document.querySelector(`#${sala} .hora[data-hora="${hora}"]`);
            horaEl.classList.remove('disponible');
            horaEl.classList.add('ocupado');
            document.getElementById('reservarBtn').disabled = true;
        }
    </script>
</body>
