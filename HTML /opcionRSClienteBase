<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reserva de Salas</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
        }
        h1 {
            margin-top: 30px;
            color: #333;
        }
        .sala-container {
            width: 80%;
            margin: 20px 0;
            display: none; /* Ocultamos las salas hasta que se seleccione una */
        }
        .sala {
            background-color: #fff;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .hora {
            margin: 5px 0;
            padding: 8px;
            background-color: #f8f8f8;
            border: 1px solid #ddd;
            border-radius: 4px;
            cursor: pointer;
        }
        .hora.disponible {
            background-color: #28a745;
            color: white;
        }
        .hora.ocupado {
            background-color: #dc3545;
            color: white;
            cursor: not-allowed;
        }
        .hora.seleccionada {
            background-color: #ffc107;
            color: white;
        }
        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
        }
        button:disabled {
            background-color: #ccc;
        }
    </style>
</head>
<body>
    <h1>Reserva de Salas</h1>

    <!-- Menú Desplegable para Seleccionar Sala -->
    <div>
        <label for="seleccion-sala">Selecciona una sala: </label>
        <select id="seleccion-sala" onchange="mostrarFranjas()">
            <option value="">--Seleccionar--</option>
            <option value="sala1">Sala 1</option>
            <option value="sala2">Sala 2</option>
        </select>
    </div>

    <!-- Contenedor de las salas (ocultado por defecto) -->
    <div class="sala-container" id="sala1">
        <div class="sala">
            <h2>Sala 1</h2>
            <!-- Franjas Horarias -->
            <div class="hora disponible" data-hora="08:00-10:00" onclick="reservar('sala1', '08:00-10:00')">08:00 - 10:00</div>
            <div class="hora disponible" data-hora="10:00-12:00" onclick="reservar('sala1', '10:00-12:00')">10:00 - 12:00</div>
            <div class="hora disponible" data-hora="12:00-14:00" onclick="reservar('sala1', '12:00-14:00')">12:00 - 14:00</div>
            <div class="hora disponible" data-hora="14:00-16:00" onclick="reservar('sala1', '14:00-16:00')">14:00 - 16:00</div>
            <div class="hora disponible" data-hora="16:00-18:00" onclick="reservar('sala1', '16:00-18:00')">16:00 - 18:00</div>
            <div class="hora disponible" data-hora="18:00-20:00" onclick="reservar('sala1', '18:00-20:00')">18:00 - 20:00</div>
        </div>
    </div>

    <div class="sala-container" id="sala2">
        <div class="sala">
            <h2>Sala 2</h2>
            <!-- Franjas Horarias -->
            <div class="hora disponible" data-hora="08:00-10:00" onclick="reservar('sala2', '08:00-10:00')">08:00 - 10:00</div>
            <div class="hora disponible" data-hora="10:00-12:00" onclick="reservar('sala2', '10:00-12:00')">10:00 - 12:00</div>
            <div class="hora disponible" data-hora="12:00-14:00" onclick="reservar('sala2', '12:00-14:00')">12:00 - 14:00</div>
            <div class="hora disponible" data-hora="14:00-16:00" onclick="reservar('sala2', '14:00-16:00')">14:00 - 16:00</div>
            <div class="hora disponible" data-hora="16:00-18:00" onclick="reservar('sala2', '16:00-18:00')">16:00 - 18:00</div>
            <div class="hora disponible" data-hora="18:00-20:00" onclick="reservar('sala2', '18:00-20:00')">18:00 - 20:00</div>
        </div>
    </div>

    <button id="reservarBtn" disabled onclick="realizarReserva()">Reservar</button>

    <script>
        // Simulación de la base de datos con reservas
        const reservas = {
            "sala1": {
                "08:00-10:00": false,
                "10:00-12:00": true,
                "12:00-14:00": false,
                "14:00-16:00": false,
                "16:00-18:00": true,
                "18:00-20:00": false
            },
            "sala2": {
                "08:00-10:00": true,
                "10:00-12:00": false,
                "12:00-14:00": true,
                "14:00-16:00": false,
                "16:00-18:00": false,
                "18:00-20:00": true
            }
        };

        // Función para mostrar las franjas horarias según la sala seleccionada
        function mostrarFranjas() {
            const salaSeleccionada = document.getElementById('seleccion-sala').value;
            if (salaSeleccionada) {
                // Ocultar todos los contenedores de salas
                document.querySelectorAll('.sala-container').forEach(sala => sala.style.display = 'none');
                // Mostrar el contenedor de la sala seleccionada
                document.getElementById(salaSeleccionada).style.display = 'block';
                // Colorear las franjas horarias basándonos en las reservas
                colorearFranjas(salaSeleccionada);
            }
        }

        // Colorear las franjas horarias según si están disponibles u ocupadas
        function colorearFranjas(sala) {
            const franjas = document.querySelectorAll(`#${sala} .hora`);
            franjas.forEach(franja => {
                const hora = franja.getAttribute('data-hora');
                if (reservas[sala][hora]) {
                    franja.classList.remove('disponible');
                    franja.classList.add('ocupado');
                } else {
                    franja.classList.remove('ocupado');
                    franja.classList.add('disponible');
                }
            });
        }

        // Función para seleccionar una franja horaria
        function reservar(sala, hora) {
            if (reservas[sala][hora]) {
                alert('Esta franja horaria ya está ocupada.');
            } else {
                // Marcar la franja horaria como seleccionada
                document.querySelectorAll(`#${sala} .hora`).forEach(el => el.classList.remove('seleccionada'));
                document.querySelector(`#${sala} .hora[data-hora="${hora}"]`).classList.add('seleccionada');
                document.getElementById('reservarBtn').disabled = false;
                document.getElementById('reservarBtn').setAttribute('data-hora', hora);
                document.getElementById('reservarBtn').setAttribute('data-sala', sala);
            }
        }

        // Realizar la reserva
        function realizarReserva() {
            const sala = document.getElementById('reservarBtn').getAttribute('data-sala');
            const hora = document.getElementById('reservarBtn').getAttribute('data-hora');
            const nombreUsuario = prompt("Por favor, introduce tu nombre de usuario:");

            if (!nombreUsuario) {
                alert('El nombre de usuario es obligatorio.');
                return;
            }

            // Simulación de la inserción en la base de datos
            reservas[sala][hora] = true; // Marcar la hora como reservada
            alert("La Reserva se ha realizado correctamente.");
            
            // Actualizar la interfaz
            const horaEl = document.querySelector(`#${sala} .hora[data-hora="${hora}"]`);
            horaEl.classList.remove('disponible');
            horaEl.classList.add('ocupado');
            document.getElementById('reservarBtn').disabled = true;
        }
    </script>
</body>
</html>
