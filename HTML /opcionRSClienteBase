            width: 80%;
            margin: 20px 0;
        }
        .sala {
            background-color: #fff;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .hora {
            margin: 5px 0;
            padding: 8px;
            background-color: #f8f8f8;
            border: 1px solid #ddd;
            border-radius: 4px;
            cursor: pointer;
        }
        .hora.disponible {
            background-color: #28a745;
            color: white;
        }
        .hora.ocupado {
            background-color: #dc3545;
            color: white;
            cursor: not-allowed;
        }
