<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <display-name>BibliotecaEPS</display-name>
    <listener>
        <listener-class>Logic.Projectinitializer</listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>MenuInicio.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--  Declaración del servlet  -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlets.Login</servlet-class>
    </servlet>
    <!--  Mapeo del servlet  -->
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <!--  Declaración del servlet  -->
    <servlet>
        <servlet-name>Reserva</servlet-name>
        <servlet-class>Servlets.Reserva</servlet-class>
    </servlet>
    <!--  Mapeo del servlet  -->
    <servlet-mapping>
        <servlet-name>Reserva</servlet-name>
        <url-pattern>/Reserva</url-pattern>
    </servlet-mapping>
    <!--  Declaración del servlet  -->
    <servlet>
        <servlet-name>PerfilUsuarioServlet</servlet-name>
        <servlet-class>Servlets.PerfilUsuarioServlet</servlet-class>
    </servlet>
    <!--  Mapeo del servlet  -->
    <servlet-mapping>
        <servlet-name>PerfilUsuarioServlet</servlet-name>
        <url-pattern>/PerfilUsuarioServlet</url-pattern>
    </servlet-mapping>
        <!--  Declaración del servlet  -->
    <servlet>
        <servlet-name>EstadisticasCliente</servlet-name>
        <servlet-class>Servlets.EstadisticasCliente</servlet-class>
    </servlet>
    <!--  Mapeo del servlet  -->
    <servlet-mapping>
        <servlet-name>EstadisticasCliente</servlet-name>
        <url-pattern>/EstadisticasCliente</url-pattern>
    </servlet-mapping>
    
        <!--  Declaración del servlet  -->
    <servlet>
        <servlet-name>EstadisticasGestor</servlet-name>
        <servlet-class>Servlets.EstadisticasGestor</servlet-class>
    </servlet>
    <!--  Mapeo del servlet  -->
    <servlet-mapping>
        <servlet-name>EstadisticasGestor</servlet-name>
        <url-pattern>/EstadisticasGestor</url-pattern>
    </servlet-mapping>
</web-app>
